{
  "name": "l-edge-liminal-edge-os",
  "version": "0.1.0",
  "description": "LIMINAL EDGE — семиуровневый каркас живой edge-ОС.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "ts-node services/devCluster.ts",
    "dev:edge": "ts-node edge/edgeService.ts",
    "dev:interface": "ts-node interface/apiServer.ts",
    "build": "tsc -p tsconfig.json",
    "check": "tsc --noEmit",
    "test": "npm-run-all --serial test:storage test:circulation test:transmutation test:sleep test:homeostasis test:reflex test:perception",
    "test:storage": "ts-node tests/mockStorage.test.ts",
    "test:circulation": "ts-node tests/circulation.test.ts",
    "test:transmutation": "ts-node transmutation/tests/transmutationEngine.test.ts",
    "test:sleep": "ts-node sleep/tests/sleepCycle.test.ts",
    "test:homeostasis": "ts-node tests/homeostasis/homeostasisManager.test.ts",
    "test:reflex": "ts-node reflex/tests/reflexEngine.test.ts",
    "test:perception": "ts-node perception/tests/perceptionEngine.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "express": "^5.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/uuid": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
